// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "base_keymap": "VSCode",
  "theme": {
    "mode": "dark",
    "dark": "Catppuccin Frappe",
    "light": "One Light"
  },
  "icon_theme": {
    "mode": "dark",
    "dark": "Catppuccin Icons"
  },
  "buffer_font_size": 24,
  "buffer_font_family": "Menlo",
  "buffer_line_height": "comfortable",
  "ui_font_size": 18,
  "auto_updates": true,
  "load_direnv": "direct",
  "format_on_save": "on",
  "auto_install_extension": {
    "catppuccin": true,
    "catppuccin-icons": true,
    "elixir": true
  },
  "project_panel": {
    "default_width": 260
  },
  "tabs": {
    "git_status": true
  },
  "terminal": {
    "shell": {
      "program": "/etc/profiles/per-user/huberm/bin/zsh"
    }
  },
  "language_overrides": {
    "Go": {
      "format_on_save": {
        "external": {
          "command": "gofmt",
          "arguments": []
        }
      }
    }
  }
}
