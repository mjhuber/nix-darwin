[user]
  name = Micah Huber
  email = mhuber@rechargeapps.com

[init]
  templateDir = ~/.git-template

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global
  pager = delta

[credential]
  helper = osxkeychain

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[commit]
  gpgsign = false

[delta]
  line-numbers = true
  side-by-side = true

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true
[color]
  ui = true

[pull]
  rebase = false

[alias]
  aa = add -A
  lol = log --pretty=oneline --abbrev-commit --graph --decorate

[push]
  autoSetupRemote = true
